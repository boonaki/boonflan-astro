---
import Order from '../../layouts/Order.astro';
import NavBar from '../../components/NavBar.astro';
import ItemMenu from '../../components/ItemMenu';
---

<Order title='Classic Flan'>
   <NavBar />
   <main class="lg:flex lg:justify-center lg:items-center">
      <section class="px-8 md:flex md:flex-row-reverse md:justify-center lg:block lg:mr-8">
         <div class="pr-2 sm:w-[500px] md:ml-4 lg:ml-0">
            <div class="flex">
               <h3 class="title-span leading-none font-bold text-2xl font-mansalva">Classic Flan</h3>
               <span class="font-bold text-sm p-1 rounded-lg bg-[#5555551c] text-[#a48a69] ml-1">Most Popular</span>
            </div>
            <p class="leading-none my-2 font-serif italic">Soft, creamy flan covered in a caramel glaze.</p>
         </div>
         <img src="/flan-test.jpg" alt="" class="rounded-xl shadow-xl w-[400px]"></img>
      </section>
      <section class="pt-8 mt-8 bg-[#5555551c] md:flex md:flex-col md:items-center lg:w-[600px] lg:py-8 lg:mr-8 lg:px-4 lg:rounded-lg">
         <!-- <div class="bg-transparent h-[412px] w-full absolute"></div> -->
         <ItemMenu slicePrice={3} miniPrice={5} wholePrice={12} id="classic" client:only />
         <div class="text-center underline py-8 text-sm lg:hidden">
            <a href="/">Return to Home</a>
         </div>
      </section>
   </main>
   <div class="text-center underline my-8 text-sm hidden lg:block w-full">
      <div class="h-[100px]"></div>
      <a href="/">Return to Home</a>
   </div>
</Order>