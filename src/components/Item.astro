---
interface Props {
	title: string;
   altTitle: string | null;
   body: string;
   slicePrice: number;
   wholePrice: number;
   miniPrice: number;
   url: string;
}

const { title, altTitle, body, slicePrice, wholePrice, miniPrice, url } = Astro.props;
---

<div class="px-8 mb-8 sm:px-6">
   <div class="flex flex-col">
      <div class="pr-2">
         <div class="flex">
            <a href=`/order/${url}`><h3 class="title-span leading-none font-bold text-2xl">{title}</h3></a>
            {altTitle && <span class="font-bold text-sm p-1 rounded-lg bg-[#5555551c] text-[#a48a69] ml-1">{altTitle}</span>}
         </div>
         <p class="leading-none mt-2 font-serif italic">{body}</p>
      </div>
      <div class="flex flex-wrap mb-2 text-sm gap-x-2">
         <a href=`/order/${url}?t=slice` class="mt-2 block rounded-full bg-[#f7ba84] px-3 py-1 font-semibold flex items-center hover:bg-[#ffa95e] transition">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-slice mr-1" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none" stroke-linecap="round" stroke-linejoin="round">
               <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
               <path d="M3 19l15 -15l3 3l-6 6l2 2a14 14 0 0 1 -14 4" />
            </svg>
            By Slice - ${slicePrice}
         </a>
         <a href=`/order/${url}?t=mini` class="mt-2 block rounded-full bg-[#f7ba84] px-3 py-1 font-semibold flex items-center hover:bg-[#ffa95e] transition">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-cake mr-1 mb-1" width="18" height="18" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none" stroke-linecap="round" stroke-linejoin="round">
               <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
               <path d="M3 20h18v-8a3 3 0 0 0 -3 -3h-12a3 3 0 0 0 -3 3v8z" />
               <path d="M3 14.803c.312 .135 .654 .204 1 .197a2.4 2.4 0 0 0 2 -1a2.4 2.4 0 0 1 2 -1a2.4 2.4 0 0 1 2 1a2.4 2.4 0 0 0 2 1a2.4 2.4 0 0 0 2 -1a2.4 2.4 0 0 1 2 -1a2.4 2.4 0 0 1 2 1a2.4 2.4 0 0 0 2 1c.35 .007 .692 -.062 1 -.197" />
            </svg>
            Mini ${miniPrice}
         </a>
         <a href=`/order/${url}?t=whole` class="mt-2 block rounded-full bg-[#f7ba84] px-3 py-1 font-semibold flex items-center hover:bg-[#ffa95e] transition">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-cake mr-1 mb-1" width="25" height="25" viewBox="0 0 24 24" stroke-width="1.25" stroke="#000000" fill="none" stroke-linecap="round" stroke-linejoin="round">
               <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
               <path d="M3 20h18v-8a3 3 0 0 0 -3 -3h-12a3 3 0 0 0 -3 3v8z" />
               <path d="M3 14.803c.312 .135 .654 .204 1 .197a2.4 2.4 0 0 0 2 -1a2.4 2.4 0 0 1 2 -1a2.4 2.4 0 0 1 2 1a2.4 2.4 0 0 0 2 1a2.4 2.4 0 0 0 2 -1a2.4 2.4 0 0 1 2 -1a2.4 2.4 0 0 1 2 1a2.4 2.4 0 0 0 2 1c.35 .007 .692 -.062 1 -.197" />
            </svg>
            Whole ${wholePrice}
         </a>
      </div>
   </div>
   <a href=`/order/${url}` class="group"><img src="/flan-test.jpg" alt="" class="rounded-xl shadow-xl w-[450px] sm:w-[375px] group-hover:scale-[1.02] group-target:scale-[1.02] transition"></img></a>
</div>
<style>
   @import url('https://fonts.googleapis.com/css2?family=Mansalva&display=swap');
   .title-span{
      font-family: 'Mansalva', sans-serif;
   }
</style> 